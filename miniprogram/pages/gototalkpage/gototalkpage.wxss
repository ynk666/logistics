page{
  width: 100%;
  height: 100%;
}
.container{
  width: 100%;
  height: 100%;
}
.rightText{
  display: inline-block;
  flex: 3;
  display: flex;
  width: 100%;
  height: 100%;
  align-items: center;
}
.message{
  border: 6rpx solid #f6f6f6;
  width: 90%;
  margin: auto;
  margin-top: 3%;
  height: 8%;
  display: flex;
}
.leftText{
  flex: 2;
  display: flex;
  width: 100%;
  height: 100%;
  padding-left: 3%;
  align-items: center;
}
textarea{
  width: 90%;
  margin: auto;
  height: 14%;
  margin-top: 3%;
  border: 6rpx solid #f6f6f6;
}
.footer{
  position: fixed;
  bottom: 0;
  width: 100%;
  color: white;
  justify-content: center;
 }
 .footerBtn1{
  background-color:	#4169E1;
  width: 100%;
  color: white;
  justify-content: center;
 }
 .footerBtn2{
  background-color:	#4169E1;
  width: 100%;
  color: white;
  justify-content: center;
  margin-top: 3%;
 } 
 .delete{
  flex: 1;
  display: flex;
  width: 100%;
  height: 100%;
  padding-left: 3%;
  align-items: center;
}
.data{
  flex: 10;
  display: flex;
  width: 100%;
  height: 100%;
  padding-left: 3%;
  align-items: center;
}
.clear{
  margin: 0;
  padding: 0;
  width: 30%;
  display: flex;
  align-items: center;
  justify-content: center;
}
.num{
  display: flex;
  height: 100%;
  padding-left: 3%;
  align-items: center;
  width: 40%;
}
.message2{
  width: 90%;
  margin: auto;
  margin-top: 3%;
  height: 5%;
  display: flex;
}
.num-data{
  border: 6rpx solid #f6f6f6;
  width: 90%;
  margin: auto;
  margin-top: 3%;
  height: 5%;
  display: flex;
}